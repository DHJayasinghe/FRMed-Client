@{
    /**/

    ViewBag.Title = "About";
}
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">Scanner</div>
            <div class="panel-body">
                <div id="my_camera"></div>
                <div id="results"></div>
                <!-- A button for taking snaps -->
                <form>
                    <button type="button" id="btnWebcamStart" class="btn btn-primary" title="Start"><span class="glyphicon glyphicon-record"></span></button>
                    <button type="button" id="btnWebcamStop" class="btn btn-danger" title="Stop"><span class="glyphicon glyphicon-ban-circle"></span></button>
                    <button type="button" id="btnTakeSnapshot" class="btn btn-success" title="Snapshot"><span class="glyphicon glyphicon-camera"></span></button>
                </form>

            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">Matching Result</div>
            <div class="panel-body">
                <div id="matchResults"></div>
                <div id="lblPatientName" class="text-uppercase text-center" style="font-weight:bold"></div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">Primary Diagnosis Description</div>
            <div class="panel-body">
                <table class="table table-condensed table-striped">
                    <tbody id="tblPrimaryDiagnosis"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/webcam.js"></script>
    <script>
        $(document).ready(function (e) {
            var $snapshot_datauri; //global variable to save snapshot data uri
            $('#btnTakeSnapshot').click(function (e) {
                e.preventDefault();
                // take snapshot and get image data
                Webcam.snap(function (data_uri) {
                    $snapshot_datauri = data_uri; //save data_uri to global variable
                    // display results in page
                    $('#results').html('<img src="' + data_uri + '"/>').removeClass('hidden');
                    $('#lblPatientName').empty();
                    $('#matchResults').html('Searching for a Matching Result...');
                    $('#tblPrimaryDiagnosis').empty(); //clear diagnosis description section
                    $('#btnWebcamStop').click(); //stop running webcam

                    Webcam.upload(data_uri, '/Patient/Record/Search', function (code, data) {
                        var result = JSON.parse(data);
                        console.log(result);
                        if (result.code === 200) {
                            $('#matchResults').html('<img src="' + result.data.Profile.Picture + '"/>');

                            var appendstrng = '';
                            //console.log(result.data.Admissions);
                            $('#lblPatientName').html(result.data.Profile.FullName);
                            $.each(result.data.Admissions, function (index, obj) {
                                appendstrng += '<tr><td>' + obj.DiagnosisCode + '</td><td>' + obj.DiagnosisDescription + '</td></tr>';
                            });
                            $('#tblPrimaryDiagnosis').append(appendstrng);
                        } else if (result.code === 404) {
                            $('#matchResults').html('<h5 class="text-warning">' + result.text + '</h5>');
                        }
                        else {
                            $('#matchResults').html('<h5 class="text-danger">' + result.text + '</h5>');
                        }
                    });
                });
            });
            $('#btnWebcamStart').click(function (e) {
                $('#my_camera').removeClass('hidden');
                $('#results').addClass('hidden');
                Webcam.set({
                    width: 320,
                    height: 240,
                    image_format: 'jpeg',
                    jpeg_quality: 90
                });
                Webcam.attach('#my_camera');
            });
            $('#btnWebcamStop').click(function (e) {
                $('#my_camera').addClass('hidden');
                Webcam.reset();
            });
        });
    </script>

}
